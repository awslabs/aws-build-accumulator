name: Run Litani Tests
on:
  pull_request:
    types: [ labeled ]

jobs:
  test-litani:
    if: ${{ github.event.label.name == 'test' }}
    name: Run Litani Tests
    runs-on: macos-latest
    steps:
      - uses: actions/checkout@v2
      - name: Install dependencies
        run: |
          brew install ninja
          python3 -m pip install jinja2
      - name: Run Unit and e2e tests
        run: ./test/run
